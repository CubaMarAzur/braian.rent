# ===================================================
#    Zmienne Środowiskowe dla Projektu Braian.rent
# ===================================================
#
# UWAGA:
# Ten plik służy jako przykład. Skopiuj jego zawartość
# do nowego pliku o nazwie .env i uzupełnij swoimi danymi.
# Plik .env jest ignorowany przez Git i nigdy nie powinien
# znaleźć się w repozytorium!

# ===================================================
# ŚRODOWISKO
# ===================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# ===================================================
# BAZA DANYCH
# ===================================================
# Adres URL do bazy danych PostgreSQL.
# Jest on używany przez Prisma do łączenia się z bazą.
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:TwojeSuperTajneHaslo@localhost:5432/braian_rent"

# Pool connection settings dla Prisma
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=20000

# ===================================================
# NEXT.JS KONFIGURACJA
# ===================================================
# Port na którym będzie działać aplikacja
PORT=3000

# URL aplikacji (używane dla CORS, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===================================================
# BEZPIECZEŃSTWO
# ===================================================
# Secret key dla JWT tokens (wygeneruj silny klucz!)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Secret key dla sesji i cookies
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Secret dla NextAuth.js (jeśli będziemy używać)
NEXTAUTH_SECRET="your-nextauth-secret-key-change-this-in-production"
NEXTAUTH_URL=http://localhost:3000

# ===================================================
# INTEGRACJE ZEWNĘTRZNE
# ===================================================
# Firebase (dla Firestore - czat)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abcdef"

# Email service (np. SendGrid, Resend)
EMAIL_API_KEY="your-email-service-api-key"
EMAIL_FROM="noreply@braian.rent"

# ===================================================
# MONITORING I LOGOWANIE
# ===================================================
# Sentry dla error tracking
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===================================================
# GOOGLE CLOUD PLATFORM (Production)
# ===================================================
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"

# Google Cloud SQL connection (production)
# GOOGLE_CLOUD_SQL_CONNECTION_NAME="your-project:region:instance"

# Google Cloud Storage bucket
GOOGLE_CLOUD_STORAGE_BUCKET="braian-rent-storage"

# ===================================================
# FEATURES FLAGS
# ===================================================
# Włącz/wyłącz funkcje w aplikacji
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ===================================================
# RATE LIMITING
# ===================================================
# Ograniczenia API calls
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=900000
